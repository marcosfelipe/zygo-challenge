.col.s12.m4.l4
  .card.grey.lighten-4
    .card-image.waves-effect.waves-block.waves-light
      = image_tag('book.svg', class: 'activator')
    .card-content
      %span.card-title.activator.grey-text.text-darken-4
        = book.title
        %i.material-icons.right more_vert
      %small= book.author
    .card-action
      %a{ href: '#' } Edit
      %a{ href: '#' } Remove
    .card-reveal
      %span.card-title.grey-text.text-darken-4
        Title: #{book.title}
        %i.material-icons.right close
      %small
        Author: #{book.author}
      %p= book.description
    