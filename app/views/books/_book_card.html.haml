.col.s12.m4.l4{ id: dom_id(book) }
  .card.grey.lighten-4
    .card-image.waves-effect.waves-block.waves-light
      = image_tag(book.picture_url, class: 'activator', height: 200)
    .card-content
      %span.card-title.activator.grey-text.text-darken-4
        = book.title
        %i.material-icons.right more_vert
      %small= book.author
    - if user_signed_in?
      .card-action
        .row
          .col.s4.l4.m4
            = link_to edit_book_path(book), data: { turbo_frame: :modal }, class: 'btn-flat black-text' do
              %i.material-icons edit
          .col.s4.l4.m4
            = button_to book_path(book), method: :delete, class: 'btn-flat' do
              %i.material-icons delete
          .col.s4.l4.m4
            - if current_user.favorite_book?(book)
              = button_to destroy_favorite_books_path(book), method: :delete, class: 'btn-flat red-text' do
                %i.material-icons favorite
            - else
              = button_to create_favorite_books_path(book), method: :post, class: 'btn-flat' do
                %i.material-icons favorite_border
    .card-reveal
      %span.card-title.grey-text.text-darken-4
        Title: #{book.title}
        %i.material-icons.right close
      %small
        Author: #{book.author}
      %p= book.description
    