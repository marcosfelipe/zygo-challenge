= form_tag request.path, data: { turbo_frame: 'book-list', turbo_action: :advance }, method: :get do
  .row
    .col.s6
      .input-field
        = text_field_tag :search
        %label{ for: :search } Search key
    .col.s3
      .input-field
        = select_tag :sort, options_for_select(['asc', 'desc'])
        %label Sort
    .col.s3
      .input-field= button_tag 'Filter', class: 'btn grey black-text lighten-4'
      